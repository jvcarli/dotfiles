# Alias for EXA command line tool (ls replacement)

alias ls="exa --icons"  # git option not available
alias l="exa -l --icons --git"
alias tree="exa --tree --icons"  # git option not available
alias la="exa -la --icons --git"
alias lA="exa -a --icons"  # git options not available
alias lg="exa -la --icons --git | rg"

