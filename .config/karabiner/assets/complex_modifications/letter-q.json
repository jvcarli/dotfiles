{
  "title": "[YABAI] Change Q key",
  "rules": [
    {
      "description": "Map Ctrl + Option + Q to Command + W",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control",
		"left_option"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "q"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "w",
              "modifiers": [
                "right_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Map Ctrl + Shift + Option + Q to Command + Q",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
		"left_shift",
                "left_control",
		"left_option"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "q"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "q",
              "modifiers": [
                "right_command"
              ]
            }
          ]
        }
      ]
    }
  ]
}
