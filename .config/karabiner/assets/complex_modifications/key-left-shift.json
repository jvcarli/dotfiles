{
  "title": "Change Left Shift key",
  "rules": [
    {
      "description": "Mantain Left Shift key (Post Right Control + b when pressed alone --> TMUX)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
              {
                "key_code": "b",
                "modifiers": [
                  "right_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Mantain Left Shift key (Post Right Control + a when pressed alone --> TMUX/beginning of line)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
              {
                "key_code": "a",
                "modifiers": [
                  "right_control"
              ]
            }
          ]
        }
      ]
    }
  ]
}
