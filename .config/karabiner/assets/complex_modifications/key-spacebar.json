{
  "title": "Change spacebar key",
  "rules": [
    {
      "description": "Spacebar modifier by holding spacebar key. Regular spacebar when pressed alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "spacebar_mod",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "spacebar_mod",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [],
              "opional": ["any"]
            }
          },
          "to": [
            {
              "repeat": false,
              "key_code": "a",
              "modifiers": ["right_command"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "spacebar_mod",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "repeat": false,
              "key_code": "c",
              "modifiers": ["right_control"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "spacebar_mod",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}
