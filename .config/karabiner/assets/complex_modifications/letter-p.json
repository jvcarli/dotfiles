{
  "title": "Change P key",
  "rules": [
    {
      "description": "Map Hyper + P to grave accent",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control",
		"left_option",
		"left_command",
		"left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "p"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "right_option"
              ]
            }
          ]
        }
      ]
    }
  ]
}
