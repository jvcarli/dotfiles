{
  "title": "Change return key",
  "rules": [
    {
      "description": "Change return to shift+option if pressed with other keys, to return if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
              "basic.to_if_alone_timeout_milliseconds": 75,
              "basic.to_if_held_down_threshold_milliseconds": 100
         },
          "to_if_alone": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_option",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change return to right control if pressed with other keys, to return if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
              "basic.to_if_alone_timeout_milliseconds": 75,
              "basic.to_if_held_down_threshold_milliseconds": 100
         },
          "to_if_alone": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_control"
            }
          ]
        }
      ]
    },
    {
      "description": "Map Left Control + Enter to BackSpace",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            },
            "key_code": "return_or_enter"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace"
            }
          ]
        }
      ]
    }
  ]
}
