{
  "title": "Change J key",
  "rules": [
    {
      "description": "Map Hyper + J to down arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control",
		"left_option",
		"left_command",
		"left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "j"
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "Map Hyper + J to return",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control",
		"left_option",
		"left_command",
		"left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "j"
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "Map Left Control + Left Command + J to return",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "j"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    }
  ]
}
