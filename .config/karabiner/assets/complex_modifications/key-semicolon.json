    {
      "description": "Map Left Control + ; to option + delete (delete one word)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_control"]
            },
            "key_code": "semicolon"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace",
              "modifiers": ["left_option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Map Left Control + ; to delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_control"]
            },
            "key_code": "semicolon"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace"
            }
          ]
        }
      ]
    },
    {
      "description": "Map Hyper Key + ; to delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_option",
                "left_command",
                "left_shift"
              ],
              "optional": ["caps_lock"]
            },
            "key_code": "semicolon"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace"
            }
          ]
        }
