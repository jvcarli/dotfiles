{
  "title": "Change ; key",
  "rules": [
    {
      "description": "Semicolon modifier by holding ; key. Regular ; when pressed alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "semicolon_mod",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "semicolon_mod",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "semicolon"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "repeat": false,
              "key_code": "a",
              "modifiers": ["right_control"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "semicolon_mod",
              "value": 1
            }
          ]
        },
