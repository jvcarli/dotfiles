{
  "title": "Change L key",
  "rules": [
    {
      "description": "Map Hyper + L to right arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control",
		"left_option",
		"left_command",
		"left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "l"
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "Map Control + L to right arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "l"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "Map Hyper Key + L to delete forward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                 "left_control",
		             "left_option",
                 "left_command",
		             "left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "l"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_forward"
            }
          ]
        }
      ]
    }
  ]
}
